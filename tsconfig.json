{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "types": [
      "node",
      "jest",
      "./.env.d.ts"
    ],
    "paths": {
      "@libs/database": [
        "libs/database/src"
      ],
      "@libs/database/*": [
        "libs/database/src/*"
      ],
      "@libs/emailer": [
        "libs/emailer/src"
      ],
      "@libs/emailer/*": [
        "libs/emailer/src/*"
      ],
      "@libs/gateway": [
        "libs/gateway/src"
      ],
      "@libs/gateway/*": [
        "libs/gateway/src/*"
      ],
      "@libs/types": [
        "libs/types/src"
      ],
      "@libs/types/*": [
        "libs/types/src/*"
      ],
      "@libs/verification": [
        "libs/verification/src"
      ],
      "@libs/verification/*": [
        "libs/verification/src/*"
      ]
    }
  }
}